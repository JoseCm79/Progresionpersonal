<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/info"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/avenirblack"
            android:text="Información"
            android:textColor="@color/letra_aso_azul"
            android:textSize="24sp"></TextView>

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/logoaso" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/avenirbook"
        android:text="Esta aplicación busca ser una guía y herramienta para los dirigentes de sección de tropa y wak tsurí, en el registro de progresión personal"
        android:textColor="@color/letra_aso_azul"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/gracias"
        android:layout_width="204dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gracias" />


</LinearLayout>